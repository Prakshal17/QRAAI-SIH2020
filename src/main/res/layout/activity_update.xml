<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8093ff"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:elevation="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#fff">

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    style="@style/headerTextPrimary"
                    android:text="Select Service"
                    android:layout_marginTop="@dimen/loginViewsMargin"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Serial Number :"
                    android:textColor="#313f8c"/>

                <TextView
                    android:id="@+id/n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:text="Equipment Name :"
                    android:textColor="#313f8c"
                    />

                <TextView
                    android:id="@+id/p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:text="Price :"
                    android:textColor="#313f8c"
                    />

                <TextView
                    android:id="@+id/q"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:text="Quantity Packed :"
                    android:textColor="#313f8c"
                     />

                <TextView
                    android:id="@+id/b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:text="Packed By :"
                    android:textColor="#313f8c"
                    />

                <TextView
                    android:id="@+id/d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:text="Date of installation :"
                    android:textColor="#313f8c"
                     />

                <TextView
                    android:id="@+id/a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="Times New Roamn"
                    android:textColor="#313f8c"
                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:textColor="#313f8c"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/serial" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/name"
                        android:textColor="#313f8c"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/price"
                        android:textColor="#313f8c"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/qtyp"
                        android:textColor="#313f8c" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/by"
                        android:textColor="#313f8c" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="Times New Roamn"
                        android:layout_marginBottom="10sp"
                        android:id="@+id/date"
                        android:textColor="#313f8c" />

                    <TextView
                        android:id="@+id/all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="Times New Roamn"
                        android:textColor="#313f8c" />

                </LinearLayout>

            </LinearLayout>

                <Spinner
                    android:id="@+id/updatespinner"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desp"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Description">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textColor="#000"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    style="@style/loginButton"
                    android:id="@+id/update"
                    android:text="Update"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/loginViewsMargin"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</RelativeLayout>